---
import HeaderSeo from '../components/Header_seo.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  permalink: string;
}
const { title, description, permalink } = Astro.props;
---
<html lang="en">
<head>
<HeaderSeo title={title} description={description} permalink={permalink} />
</head>
<body>
<div>    
    <Navbar />
    <main class="flex justify-center lg:container mx-4" >
        <slot />  
    </main>
    <Footer />
</div>
</body>
</html>

<style>
    .link {  margin-right: 1rem;}
    .container {
        min-height: 70vh;
    }
</style>
