---
interface Props {
    title: string;
    description: string;
    href: string;
    image: string;
}

const { title, description, href, image } = Astro.props;
---

<a href={"/blog/" + href}>
    <article
        class="article mt-5 w-full cursor-pointer md:w-1/3 md:px-6 wow fadeInUp"
    >
        <div class="py-2 rounded-lg w-full md:w-96 text-gray-900">
            <img
                src={image}
                alt="blog"
                class="mx-auto rounded-lg border border-gray-300"
                style="width: 23rem;"
            />
            <div class="px-6 py-2 w-full rounded-t-lg">
                <p class="text-xl font-extrabold mb-2">
                    {title}
                </p>
                <p class="pb-2 long-line">{description}</p>
            </div>
        </div>
    </article>
</a>
