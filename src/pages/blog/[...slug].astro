---
import Layout from "../../layouts/default.astro";
export async function getStaticPaths() {
  const posts = await Astro.glob('../../content/*.md')

  return posts.map(post => ({
    params: { slug: post.file.split('/').pop().split('.').shift() },
    props: { post },
  }))
}

const { Content, frontmatter } = Astro.props.post
const { title, img, date } = frontmatter;
---
<Layout>
  <section class="prose lg:prose-xl mt-2 w-full mx-4">
    <!-- Thumbnail image -->
    <div class="img-cont lg:h-72">
      <img src={img} alt={title} class=" rounded-2xl" />
    </div>
    <!-- Thumbnail image -->
    <h1 class="heading">{title}</h1>
    {  date }
    <Content />
  </section>
</Layout>